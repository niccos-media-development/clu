<!-- Preloader HTML -->
<div id="custom-preloader">
  <img src="https://cdn.shopify.com/s/files/1/0735/7874/2045/files/1000x1000px_3D_logo.jpg?v=1741652028" alt="Loading..." />
</div>

<!-- Preloader CSS -->
<style>
  #custom-preloader {
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 1s ease;
  }

  #custom-preloader img {
    max-width: 150px;
    height: auto;
  }

  #custom-preloader.fade-out {
    opacity: 0;
    pointer-events: none;
  }
</style>

<!-- Preloader JS -->
<script>
  window.addEventListener('load', function () {
    setTimeout(function () {
      const preloader = document.getElementById('custom-preloader');
      preloader.classList.add('fade-out');
      setTimeout(() => preloader.style.display = 'none', 200); // wait for transition
    }, 200);
  });
</script>
